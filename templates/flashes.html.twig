{% if app.session.flashbag.peekAll %}
    <div class="my-4">
        {% for message in app.flashes('success') %}
            <div role="alert" class="alert alert-success mb-2">
                <span class="ti ti-circle-check text-2xl"></span>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div role="alert" class="alert alert-error mb-2">
                <span class="ti ti-exclamation-circle text-2xl"></span>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for email in app.flashes('unverified_user') %}
            <div role="alert" class="alert alert-warning mb-2">
                <span class="ti ti-exclamation-circle text-2xl"></span>
                <span>Korisnik sa ovom email adresom nije verifikovan. Molimo da se verifikujete.</span>
            </div>
            <div class="mb-2 text-center">
                <a href="{{ path('resend_verification', {'email': email}) }}" class="btn btn-secondary gap-2">
                    <span class="ti ti-mail text-xl"></span>
                    <span>Po≈°alji ponovo verifikacioni email</span>
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}
