{% extends 'base.html.twig' %}

{% block body %}
    <div class="card card-lg bg-base-100 shadow m-4 mt-10">
        <div class="card-body">
            <h2 class="card-title mb-4">
                <span class="ti ti-help-circle text-3xl"></span>
                Šta znače statusi kod instrukcija za uplatu?
            </h2>

            <div class="space-y-4">
                {% set statuses = [
                    { id: 1, description: 'Instrukcija je aktivna, donator još nije označio da je uplatio.' },
                    { id: 2, description: 'Donator je označio da je uplata izvršena. Čeka se potvrda delegata.' },
                    { id: 6, description: 'Prošlo je 72h bez označene uplate, instrukcija je automatski zatvorena.' },
                    { id: 4, description: 'Došlo je do sistemske greške (npr. pogrešan broj računa).' },
                    { id: 5, description: 'Delegat je označio da uplata nije stigla.' },
                    { id: 3, description: 'Delegat je potvrdio da je uplata uspešno realizovana.' }
                ] %}

                {% for status in statuses %}
                    <div>
                        <div>{{ status.id|transaction_status|raw }}</div>
                        <div class="ml-8 text-gray-500">{{ status.description }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
